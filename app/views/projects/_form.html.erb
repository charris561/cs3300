    </div>
  </div>

  <div class="form-group mb-3">
    <div id="description">
      <%= form.label :description, style: "display: block", class:"form-label h5" %>
      <%= form.text_area :description, class:"form-control" %>
    </div>
  </div>

  <div>
    <%= form.submit "Submit", class: "btn btn-success" %>
  </div>
<% end %>
