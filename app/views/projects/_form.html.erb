<%= form_with(model: project) do |form| %>
  <% if project.errors.any? %>
    <div class="alert alert-danger alert-dismissable fade show" role="alert">
      <h4><%= pluralize(project.errors.count, "error") %> prohibited this project from being saved:</h4>
      <% project.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>

  <div class="form-group mb-3">
    <div id="title">
      <%= form.label :title, style: "display: block", class:"form-label h5" %>
      <%= form.text_field :title, class:"form-control" %>
    </div>
  </div>

  <div class="form-group mb-3">
    <div id="description">
      <%= form.label :description, style: "display: block", class:"form-label h5" %>
      <%= form.text_area :description, class:"form-control descriptionForm" %>
    </div>
  </div>

  <div>
    <%= form.submit "Submit", class: "btn btn-success" %>
  </div>
<% end %>